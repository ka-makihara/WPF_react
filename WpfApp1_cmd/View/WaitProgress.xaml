<UserControl x:Class="WpfApp1_cmd.View.WaitProgress"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1_cmd.View"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:mahApps="http://metro.mahapps.com/winfx/xaml/controls"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical" >
            <TextBlock Text="{Binding ProgMsg}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="20"/>
            <mahApps:ProgressRing Foreground="{DynamicResource AccentColorBrush}" IsActive="True" />
        </StackPanel> 
    </Grid>
</UserControl>
